<Window x:Class="DataGridNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:admin="clr-namespace:DataGridNamespace.Admin"
        xmlns:etudiant="clr-namespace:DataGridNamespace.Etudiant"
        xmlns:local="clr-namespace:DataGridNamespace"
        xmlns:converters="clr-namespace:DataGridNamespace.Veiw.Converters"
        x:Name="mainWindow"
        Title="Thesis Management System" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        FlowDirection="LeftToRight">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

        <!-- Search Icon Data -->
        <Geometry x:Key="SearchIconData">M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z</Geometry>

        <!-- Search Textbox Style -->
        <Style x:Key="searchTextbox" TargetType="TextBox">
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search Icon Style -->
        <Style x:Key="searchIcon" TargetType="Path">
            <Setter Property="Fill" Value="#666666"/>
            <Setter Property="Width" Value="15"/>
            <Setter Property="Height" Value="15"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="actionButton" TargetType="Button">
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Window Button Styles -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Menu Button Styles -->
        <Style x:Key="menuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="menuButtonIcon" TargetType="icon:PackIconMaterial">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="30" Background="#EFF2F7"
            MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"
                    Background="#008080" CornerRadius="0,50,0,30">
                <DockPanel LastChildFill="True">
                    <!-- Top Section -->
                    <StackPanel DockPanel.Dock="Top" Margin="20,30,20,0" HorizontalAlignment="Center">
                        <Border Width="80" Height="80" Padding="3" Background="White" CornerRadius="40">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/Images/p1.jpg" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Border>
                        <TextBlock Text="Thesis Manager" Foreground="White"
                                   FontSize="22" FontWeight="SemiBold" Margin="5,15,0,5"
                                   TextAlignment="Center"/>
                        <TextBlock Text="USTHB" Foreground="#D0BFFF"
                                   FontSize="14" FontWeight="SemiBold" TextAlignment="Center"/>
                    </StackPanel>

                    <!-- Navigation Menu -->
                    <StackPanel DockPanel.Dock="Top" Margin="20,30,20,0">
                        <Button x:Name="DashboardButton" Style="{StaticResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <icon:PackIconMaterial Kind="ViewDashboard" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Dashboard" Foreground="White"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="ThesisButton" Style="{StaticResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <icon:PackIconMaterial Kind="BookOpenPageVariant" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Thesis" Foreground="White"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="MembersButton" Style="{StaticResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <icon:PackIconMaterial Kind="AccountGroup" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Members" Foreground="White"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="ProfileButton" Style="{StaticResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <icon:PackIconMaterial Kind="Account" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Profile" Foreground="White"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="FavoritesButton" Style="{StaticResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <icon:PackIconMaterial Kind="Heart" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Favorites" Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Logout Button -->
                    <Button Style="{StaticResource menuButton}" 
                            DockPanel.Dock="Bottom" Margin="15,0,15,30"
                            Click="LogoutButton_Click" Foreground="White"
                            Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <icon:PackIconMaterial Kind="Logout"
                                                   Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Logout"/>
                        </StackPanel>
                    </Button>
                </DockPanel>
            </Border>

            <!-- Title Bar -->
            <Grid Grid.Column="1" Grid.Row="0" Background="Transparent">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" VerticalAlignment="Center" 
                            Margin="0,0,15,0">
                    <Button Style="{StaticResource WindowButtonStyle}" Click="MinimizeButton_Click"
                            Margin="5,0">
                        <icon:PackIconMaterial Kind="WindowMinimize" Width="15" Height="15" Foreground="#121518"/>
                    </Button>
                    <Button Style="{StaticResource WindowButtonStyle}" Click="MaximizeRestoreButton_Click"
                            Margin="5,0">
                        <icon:PackIconMaterial Kind="WindowMaximize" Width="15" Height="15" Foreground="#121518"/>
                    </Button>
                    <Button Style="{StaticResource WindowButtonStyle}" Click="CloseButton_Click"
                            Margin="5,0">
                        <icon:PackIconMaterial Kind="Close" Width="15" Height="15" Foreground="#FF0000"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Column="1" Grid.Row="1">
                <!-- Content Area -->
                <ScrollViewer Grid.Row="1" x:Name="ContentScrollViewer" Margin="30,20,20,20">
                    <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>
