<UserControl x:Class="DataGridNamespace.Etudiant.EtudiantFavoritesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataGridNamespace.Etudiant"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#008080" Padding="20,10">
            <TextBlock Text="Favorites" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold"/>
        </Border>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" Margin="20">
            <ListView x:Name="FavoritesListView" 
                      BorderThickness="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#008080" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Margin="0,5" 
                                Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" 
                                               FontSize="16" 
                                               FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Type}" 
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding DateAdded}" 
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                                <Button Grid.Column="1" 
                                        Background="#008080" 
                                        BorderThickness="0"
                                        Padding="10,5"
                                        Margin="5,0"
                                        Click="ViewItemButton_Click">
                                    <TextBlock Text="View" 
                                               Foreground="White"/>
                                </Button>
                                <Button Grid.Column="2" 
                                        Background="#FF4444" 
                                        BorderThickness="0"
                                        Padding="10,5"
                                        Click="RemoveFavoriteButton_Click">
                                    <TextBlock Text="Remove" 
                                               Foreground="White"/>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</UserControl> 