<Window x:Class="DataGridNamespace.Admin.AddThesisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Thesis" Height="700" Width="600"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <!-- Label Style -->
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        
        <!-- TextBox Style -->
        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Save Button Style -->
        <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006666"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004C4C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Cancel Button Style -->
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C0C0C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- ComboBox Style -->
        <Style x:Key="FormComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Title:" Style="{StaticResource FormLabelStyle}"/>
        <TextBox Grid.Row="1" x:Name="TitleTextBox" Style="{StaticResource FormTextBoxStyle}"/>
        
        <!-- Author -->
        <TextBlock Grid.Row="2" Text="Author:" Style="{StaticResource FormLabelStyle}"/>
        <TextBox Grid.Row="3" x:Name="AuthorTextBox" Style="{StaticResource FormTextBoxStyle}"/>
        
        <!-- Specialty -->
        <TextBlock Grid.Row="4" Text="Specialty:" Style="{StaticResource FormLabelStyle}"/>
        <TextBox Grid.Row="5" x:Name="SpecialtyTextBox" Style="{StaticResource FormTextBoxStyle}"/>
        
        <!-- Type -->
        <TextBlock Grid.Row="6" Text="Type:" Style="{StaticResource FormLabelStyle}"/>
        <ComboBox Grid.Row="7" x:Name="TypeComboBox" Style="{StaticResource FormComboBoxStyle}">
            <ComboBoxItem Content="Doctorat"/>
            <ComboBoxItem Content="Master"/>
        </ComboBox>
        
        <!-- Keywords -->
        <TextBlock Grid.Row="8" Text="Keywords (comma separated):" Style="{StaticResource FormLabelStyle}"/>
        <TextBox Grid.Row="9" x:Name="KeywordsTextBox" Style="{StaticResource FormTextBoxStyle}"/>
        
        <!-- Year -->
        <TextBlock Grid.Row="10" Text="Date:" Style="{StaticResource FormLabelStyle}"/>
        <DatePicker Grid.Row="11" x:Name="YearDatePicker" Height="35" Padding="5"/>
        
        <!-- Abstract -->
        <TextBlock Grid.Row="12" Text="Abstract:" Style="{StaticResource FormLabelStyle}"/>
        <TextBox Grid.Row="13" x:Name="AbstractTextBox" Height="100" Style="{StaticResource FormTextBoxStyle}" 
                 TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        
        <!-- File Path -->
        <TextBlock Grid.Row="14" Text="File Path:" Style="{StaticResource FormLabelStyle}"/>
        <Grid Grid.Row="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" x:Name="FilePathTextBox" Style="{StaticResource FormTextBoxStyle}" IsReadOnly="True"/>
            <Button Grid.Column="1" x:Name="BrowseButton" Content="Browse" Width="80" Height="35" Margin="10,0,0,0" 
                    Click="BrowseButton_Click" Style="{StaticResource ActionButtonStyle}"
                    Background="#008080" Foreground="White"/>
        </Grid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="16" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SaveButton" Content="Save" Style="{StaticResource SaveButtonStyle}" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Style="{StaticResource CancelButtonStyle}" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 