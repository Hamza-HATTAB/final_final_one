<UserControl x:Class="DataGridNamespace.SimpleUser.SimpleUserThesisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataGridNamespace.SimpleUser"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#008080" Padding="20,10">
            <TextBlock Text="Thesis" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold"/>
        </Border>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" Margin="20">
            <StackPanel>
                <!-- Search Bar -->
                <Border BorderBrush="#008080" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="SearchTextBox" 
                                 BorderThickness="0" 
                                 Padding="10,5"
                                 TextChanged="SearchTextBox_TextChanged"/>
                        <Button Grid.Column="1" 
                                Background="#008080" 
                                BorderThickness="0"
                                Padding="10,5"
                                Click="SearchButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Search" 
                                           Foreground="White" 
                                           Margin="0,0,5,0"/>
                                <icon:PackIconMaterial Kind="Magnify" 
                                                      Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- Thesis List -->
                <ListView x:Name="ThesisListView" 
                          BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#008080" 
                                    BorderThickness="1" 
                                    CornerRadius="5" 
                                    Margin="0,5" 
                                    Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Titre}" 
                                                   FontSize="16" 
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Auteur}" 
                                                   Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding Annee, StringFormat=yyyy}" 
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Background="#008080" 
                                                BorderThickness="0"
                                                Padding="10,5"
                                                Margin="0,0,5,0"
                                                Tag="{Binding}"
                                                Click="FavoriteThesisButton_Click">
                                            <TextBlock Text="â˜…" 
                                                       Foreground="White"
                                                       FontSize="16"/>
                                        </Button>
                                        <Button Background="#4CAF50" 
                                                BorderThickness="0"
                                                Padding="10,5"
                                                Margin="0,0,5,0"
                                                Tag="{Binding}"
                                                Click="ViewPdfButton_Click">
                                            <TextBlock Text="PDF" 
                                                       Foreground="White"/>
                                        </Button>
                                        <Button Background="#008080" 
                                                BorderThickness="0"
                                                Padding="10,5"
                                                Tag="{Binding}"
                                                Click="ViewThesisButton_Click">
                                            <TextBlock Text="View" 
                                                       Foreground="White"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl> 